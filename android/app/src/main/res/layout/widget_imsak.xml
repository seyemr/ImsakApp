<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/widget_card_bg"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/widget_city"
        android:text="İSTANBUL, TÜRKİYE"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/widget_date"
        android:text="7 Nisan, Çarşamba"
        android:textColor="#EEE"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/widget_imsak"
            android:text="İmsak\n05:02"
            android:textColor="#FFF"
            android:background="@drawable/widget_vakit_box"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginEnd="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/widget_gunes"
            android:text="Güneş\n06:31"
            android:textColor="#FFF"
            android:background="@drawable/widget_vakit_box"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginEnd="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/widget_ogle"
            android:text="Öğle\n13:11"
            android:textColor="#FFF"
            android:background="@drawable/widget_vakit_box"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginEnd="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/widget_ikindi"
            android:text="İkindi\n16:49"
            android:textColor="#FFF"
            android:background="@drawable/widget_vakit_box"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginEnd="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/widget_aksam"
            android:text="Akşam\n19:42"
            android:textColor="#FFF"
            android:background="@drawable/widget_vakit_box"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginEnd="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/widget_yatsi"
            android:text="Yatsı\n21:05"
            android:textColor="#FFF"
            android:background="@drawable/widget_vakit_box"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/widget_kalan_sure"
        android:text="İftara 1s 47dk"
        android:textColor="#FFD600"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"/>
</LinearLayout>
